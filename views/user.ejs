<% layout('./layout/boilerplate') -%>
<% if (success && success.length) { %>
  <div class="alert alert-danger alert-dismissible fade show" role="alert" width="50">
    <%= success %>
  </div>
  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
<% } %>

<body>
    <span style="background-color: #f5ffff; display: flex; justify-content: center;"></span>
    <nav class="navbar" style="background-color: #276e6a; border-radius: 25px; height: 35px;">
        <div class="container-fluid" style="display: flex; justify-content: center;">
          <a href="/codemath" class="nav-link align-text-top" style="font-family: 'Merriweather', serif; color: azure;">Home</a>
          </div>
      </nav>
    <div class="container" style="position: absolute; top:20%; height: 25%; width: 50%; left: 25%; display: block; justify-content: center">
      <div style="display: flex; justify-content: center;">
      <img src="/images/2-removebg-preview.png" alt="Logo" width="80" height="80" class="d-inline-block align-text-center justify-content-center"></div>
      <div style="display: flex; justify-content: center; font-family: 'Merriweather', serif">
      <h2>Welcome to Code-Math</h2></div>
    <form method="post" action="/codemath/user" style="font-family: 'Merriweather', serif" class="row g-3 needs-validation" novalidate>
        
        <div class="mb-3" style="font-family: 'Merriweather', serif">
            <label for="exampleFormControlInput1" class="form-label">Username</label>
            <input type="username" class="form-control" id="exampleFormControlInput1" placeholder="Username" name="username" required>
            <div class="valid-feedback">
              Looks good!
            </div>
            <div class="invalid-feedback">
              Please enter a valid username
            </div>
          </div>
          <div class="mb-3">
            <label for="validationServer02" class="form-label">Email</label>
            <input type="email" class="form-control" id="validationServer02" placeholder="example@email.com" name="email" required=true>
            <div class="invalid-feedback">
              Please enter a valid email
            </div>
            <div class="valid-feedback">
              Looks good!
            </div>
          </div>
          <div class="mb-3">
            <label for="exampleFormControlInput1" class="form-label">Password</label>
            <input minlength='8' placeholder="Password" name="password" required=true type="password" id="inputPassword5" class="form-control">
            <div class="invalid-feedback">
              Password must contain 8 characters
            </div>
            <div class="valid-feedback">
              Looks good!
            </div>
            
            <div id="passwordHelpBlock" class="form-text">
              Your password must be 8-20 characters long, contain letters and numbers, and must not contain spaces, special characters, or emoji.
            </div>
          </div>
        <div class="btn" style="display: block; justify-content: center;"><button type="submit" class="btn btn-success ">Submit</button>
          <br>
          <a href="/codemath/login" style="color: blue;"><button class="btn btn-white ">Already have an account</a></button></div>
    </form>
    </div>
    <script src="/script.js"></script>
    
</body>